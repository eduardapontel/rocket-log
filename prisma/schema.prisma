generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  customer
  sale
}

enum DeliveryStatus {
  processing
  shipped
  delivered
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  role UserRole @default(customer)

  deliveries Delivery[]

  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  @@map("users")
}

model Delivery {
  id          String @id @default(uuid())
  user_id     String
  description String

  status DeliveryStatus @default(processing)

  user User @relation(fields: [user_id], references: [id])
  logs DeliveryLog[]

  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  @@map("deliveries")
}

model DeliveryLog {
  id          String @id @default(uuid())
  description String
  delivery_id String

  delivery Delivery @relation(fields: [delivery_id], references: [id])

  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  @@map("delivery_logs")
}
